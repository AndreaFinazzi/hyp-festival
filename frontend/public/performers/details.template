<!--page title section-->
<section id="primary-photo" class="inner_cover parallax-window" data-parallax="scroll">
    <div class="overlay_dark"></div>
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-12">
                <div class="inner_cover_content">
                    <h3>
                        <%= data.name %>
                    </h3>
                </div>
            </div>
        </div>

        <div class="breadcrumbs">
            <ul>
                <li><a href="/">Home</a> | </li>
                <li><a href="/performers">Performers</a> | </li>
                <li><span><%= data.name %></span></li>
            </ul>
        </div>
    </div>
</section>
<!--page title section end-->

<section class="pb100 container">
    <div class="event_box">
        <div class="event_info">
            <div class="event_title">
                <%= data.name %>
            </div>
            <div class="speakers">
                <strong>Performances: </strong>
                <span><%= data.joinItems.map(item => { return '<a href="/events?id=' + item.id + '">' + item.title + ' </a>'}).join(', ') %></span>
            </div>
        </div>
        <div class="event_word">
            <div class="row justify-content-left">
                <div class="col-md-10 col-12">
                    <%= data.description %>
                </div>
            </div>
        </div>
    </div>
</section>